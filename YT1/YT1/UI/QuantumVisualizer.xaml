<UserControl x:Class="FiveMQuantumTweaker2026.UI.QuantumVisualizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Quantum Gradient Brush -->
            <LinearGradientBrush x:Key="QuantumGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF6A00FF" Offset="0.0"/>
                <GradientStop Color="#FF9D00FF" Offset="0.3"/>
                <GradientStop Color="#FF00D4FF" Offset="0.6"/>
                <GradientStop Color="#FF6A00FF" Offset="1.0"/>
            </LinearGradientBrush>

            <!-- Dark Background -->
            <SolidColorBrush x:Key="DarkBackground" Color="#0A0A0F"/>
            <SolidColorBrush x:Key="DarkPanel" Color="#151520"/>

            <!-- Quantum Glow Effect -->
            <DropShadowEffect x:Key="QuantumGlow" 
                            BlurRadius="20" 
                            ShadowDepth="0" 
                            Color="#9D00FF" 
                            Opacity="0.7"/>

            <!-- Quantum Animation -->
            <Storyboard x:Key="QuantumPulse" RepeatBehavior="Forever">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
                    <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.3"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0.8"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:2" Value="0.3"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>

            <!-- Performance Card Style -->
            <Style x:Key="PerformanceCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource DarkPanel}"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#303040"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="15" 
                                        ShadowDepth="0" 
                                        Color="#000000" 
                                        Opacity="0.3"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Metric Label Style -->
            <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#A0A0B0"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- Metric Value Style -->
            <Style x:Key="MetricValueStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- Quantum Bar Style -->
            <Style x:Key="QuantumBarStyle" TargetType="ProgressBar">
                <Setter Property="Foreground" Value="{StaticResource QuantumGradient}"/>
                <Setter Property="Background" Value="#303040"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Height" Value="8"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ProgressBar">
                            <Border CornerRadius="4" 
                                    Background="{TemplateBinding Background}">
                                <Grid x:Name="PART_Track">
                                    <Rectangle x:Name="PART_Indicator" 
                                               HorizontalAlignment="Left"
                                               CornerRadius="4">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#FF6A00FF" Offset="0.0"/>
                                                <GradientStop Color="#FF00D4FF" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- FPS Indicator Style -->
            <Style x:Key="FpsIndicatorStyle" TargetType="Ellipse">
                <Setter Property="Width" Value="12"/>
                <Setter Property="Height" Value="12"/>
                <Setter Property="Margin" Value="0,0,8,0"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <!-- Quantum Background Particles -->
        <Canvas x:Name="QuantumParticlesCanvas" 
                Background="Transparent"
                IsHitTestVisible="False"/>

        <!-- Main Content -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    CornerRadius="15" 
                    Background="{StaticResource DarkPanel}"
                    Margin="0,0,0,20"
                    Padding="20,15"
                    Effect="{StaticResource QuantumGlow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Quantum Icon -->
                    <Ellipse Grid.Column="0" 
                             Width="40" 
                             Height="40" 
                             Margin="0,0,15,0">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF6A00FF" Offset="0.0"/>
                                <GradientStop Color="#FF9D00FF" Offset="0.7"/>
                                <GradientStop Color="Transparent" Offset="1.0"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <BlurEffect Radius="15"/>
                        </Ellipse.Effect>
                    </Ellipse>

                    <!-- Title -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="QUANTUM PERFORMANCE VISUALIZER" 
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   FontFamily="Segoe UI"/>
                        <TextBlock Text="Echtzeit-Systemanalyse &amp; Optimierung" 
                                   Foreground="#A0A0B0"
                                   FontSize="11"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Status Indicator -->
                    <Border Grid.Column="2" 
                            CornerRadius="10"
                            Background="#202030"
                            Padding="12,6"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="StatusIndicator" 
                                     Width="8" 
                                     Height="8" 
                                     Fill="#00FF00"
                                     Margin="0,0,6,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="10" 
                                                      Color="#00FF00" 
                                                      Opacity="0.7"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock x:Name="StatusText" 
                                       Text="SYSTEM: AKTIV" 
                                       Foreground="White"
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Performance Metrics Grid -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- CPU Performance Card -->
                <Border Grid.Column="0" Grid.Row="0"
                        Style="{StaticResource PerformanceCardStyle}"
                        Margin="0,0,10,10">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="⚡" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="CPU" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                        </StackPanel>
                        <TextBlock x:Name="CpuUsageText" 
                                   Text="0%" 
                                   Style="{StaticResource MetricValueStyle}"
                                   Margin="0,0,0,5"/>
                        <ProgressBar x:Name="CpuUsageBar" 
                                     Style="{StaticResource QuantumBarStyle}"
                                     Maximum="100"/>
                        <TextBlock x:Name="CpuFrequencyText" 
                                   Text="0 GHz" 
                                   Style="{StaticResource MetricLabelStyle}"
                                   Margin="0,8,0,0"/>
                        <TextBlock x:Name="CpuTempText" 
                                   Text="0°C" 
                                   Style="{StaticResource MetricLabelStyle}"/>
                    </StackPanel>
                </Border>

                <!-- GPU Performance Card -->
                <Border Grid.Column="1" Grid.Row="0"
                        Style="{StaticResource PerformanceCardStyle}"
                        Margin="5,0,5,10">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="🎮" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="GPU" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                        </StackPanel>
                        <TextBlock x:Name="GpuUsageText" 
                                   Text="0%" 
                                   Style="{StaticResource MetricValueStyle}"
                                   Margin="0,0,0,5"/>
                        <ProgressBar x:Name="GpuUsageBar" 
                                     Style="{StaticResource QuantumBarStyle}"
                                     Maximum="100"/>
                        <TextBlock x:Name="GpuVramText" 
                                   Text="0/0 GB" 
                                   Style="{StaticResource MetricLabelStyle}"
                                   Margin="0,8,0,0"/>
                        <TextBlock x:Name="GpuTempText" 
                                   Text="0°C" 
                                   Style="{StaticResource MetricLabelStyle}"/>
                    </StackPanel>
                </Border>

                <!-- RAM Performance Card -->
                <Border Grid.Column="2" Grid.Row="0"
                        Style="{StaticResource PerformanceCardStyle}"
                        Margin="5,0,0,10">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="💾" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="RAM" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                        </StackPanel>
                        <TextBlock x:Name="RamUsageText" 
                                   Text="0 GB" 
                                   Style="{StaticResource MetricValueStyle}"
                                   Margin="0,0,0,5"/>
                        <ProgressBar x:Name="RamUsageBar" 
                                     Style="{StaticResource QuantumBarStyle}"
                                     Maximum="100"/>
                        <TextBlock x:Name="RamSpeedText" 
                                   Text="0 MHz" 
                                   Style="{StaticResource MetricLabelStyle}"
                                   Margin="0,8,0,0"/>
                        <TextBlock x:Name="RamLatencyText" 
                                   Text="CL0" 
                                   Style="{StaticResource MetricLabelStyle}"/>
                    </StackPanel>
                </Border>

                <!-- FPS Performance Card -->
                <Border Grid.Column="3" Grid.Row="0"
                        Style="{StaticResource PerformanceCardStyle}"
                        Margin="10,0,0,10">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="📊" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="FPS" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Ellipse x:Name="FpsIndicator" 
                                     Style="{StaticResource FpsIndicatorStyle}"
                                     Fill="#00FF00">
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="8" 
                                                      Color="#00FF00" 
                                                      Opacity="0.7"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock x:Name="FpsText" 
                                       Text="0" 
                                       Style="{StaticResource MetricValueStyle}"/>
                        </StackPanel>
                        <ProgressBar x:Name="FpsStabilityBar" 
                                     Style="{StaticResource QuantumBarStyle}"
                                     Maximum="100"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="MIN:" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock x:Name="FpsMinText" 
                                       Text="0" 
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="5,0,15,0"/>
                            <TextBlock Text="MAX:" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock x:Name="FpsMaxText" 
                                       Text="0" 
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Network Performance Card -->
                <Border Grid.Column="0" Grid.Row="1"
                        Style="{StaticResource PerformanceCardStyle}"
                        Margin="0,10,10,0">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="🌐" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="NETWORK" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                        </StackPanel>
                        <TextBlock x:Name="PingText" 
                                   Text="0 ms" 
                                   Style="{StaticResource MetricValueStyle}"
                                   Margin="0,0,0,5"/>
                        <ProgressBar x:Name="PingQualityBar" 
                                     Style="{StaticResource QuantumBarStyle}"
                                     Maximum="100"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="UP:" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock x:Name="UploadSpeedText" 
                                       Text="0 Mbps" 
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="5,0,15,0"/>
                            <TextBlock Text="DOWN:" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock x:Name="DownloadSpeedText" 
                                       Text="0 Mbps" 
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- HitReg Performance Card -->
                <Border Grid.Column="1" Grid.Row="1" 
                        Grid.ColumnSpan="2"
                        Style="{StaticResource PerformanceCardStyle}"
                        Margin="5,10,5,0">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- HitReg Metrics -->
                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="🎯" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="HITREG" 
                                           Style="{StaticResource MetricLabelStyle}"/>
                            </StackPanel>
                            <TextBlock x:Name="HitRegAdvantageText" 
                                       Text="+0 ms" 
                                       Style="{StaticResource MetricValueStyle}"
                                       Margin="0,0,0,5"/>
                            <ProgressBar x:Name="HitRegQualityBar" 
                                         Style="{StaticResource QuantumBarStyle}"
                                         Maximum="100"/>
                            <TextBlock x:Name="ServerTickText" 
                                       Text="Tick: 0 Hz" 
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="0,8,0,0"/>
                            <TextBlock x:Name="ClientTickText" 
                                       Text="Client: 0 Hz" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                        </StackPanel>

                        <!-- HitReg Visualization -->
                        <Canvas Grid.Column="1" 
                                Margin="20,0,0,0"
                                Background="Transparent">
                            <Ellipse x:Name="HitRegCircle" 
                                     Width="100" 
                                     Height="100"
                                     Stroke="{StaticResource QuantumGradient}"
                                     StrokeThickness="2"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            <Ellipse x:Name="HitRegCore" 
                                     Width="30" 
                                     Height="30"
                                     Fill="{StaticResource QuantumGradient}"
                                     Canvas.Left="35"
                                     Canvas.Top="35">
                                <Ellipse.Effect>
                                    <BlurEffect Radius="10"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock x:Name="HitRegStatusText" 
                                       Text="SYNCED"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Canvas.Left="25"
                                       Canvas.Top="110"/>
                        </Canvas>
                    </Grid>
                </Border>

                <!-- System Status Card -->
                <Border Grid.Column="3" Grid.Row="1"
                        Style="{StaticResource PerformanceCardStyle}"
                        Margin="10,10,0,0">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="🔧" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="SYSTEM" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                        </StackPanel>
                        <TextBlock x:Name="SystemLoadText" 
                                   Text="LOAD: 0%" 
                                   Style="{StaticResource MetricValueStyle}"
                                   Margin="0,0,0,5"/>
                        <ProgressBar x:Name="SystemLoadBar" 
                                     Style="{StaticResource QuantumBarStyle}"
                                     Maximum="100"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="THREADS:" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock x:Name="ThreadCountText" 
                                       Text="0" 
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="5,0,15,0"/>
                            <TextBlock Text="HANDLES:" 
                                       Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock x:Name="HandleCountText" 
                                       Text="0" 
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="5,0,0,0"/>
                        </StackPanel>
                        <TextBlock x:Name="UptimeText" 
                                   Text="UPTIME: 00:00" 
                                   Style="{StaticResource MetricLabelStyle}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Live Graph -->
            <Border Grid.Row="2" 
                    Style="{StaticResource PerformanceCardStyle}"
                    Height="150">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Graph Header -->
                    <Border Grid.Row="0" 
                            Background="#202030"
                            CornerRadius="5,5,0,0"
                            Padding="15,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📈" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="LIVE PERFORMANCE GRAPH" 
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="SemiBold"/>
                            <ComboBox x:Name="GraphTypeCombo" 
                                      Margin="20,0,0,0"
                                      Width="150"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="CPU Usage"/>
                                <ComboBoxItem Content="FPS Timeline"/>
                                <ComboBoxItem Content="Network Latency"/>
                                <ComboBoxItem Content="HitReg Advantage"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Graph Canvas -->
                    <Canvas x:Name="LiveGraphCanvas" 
                            Grid.Row="1"
                            Background="Transparent"/>

                    <!-- Graph Overlay Info -->
                    <Border Canvas.ZIndex="1"
                            Background="#800A0A0F"
                            CornerRadius="5"
                            Width="200"
                            Height="40"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Margin="0,10,10,0"
                            Padding="10">
                        <StackPanel>
                            <TextBlock x:Name="GraphInfoText" 
                                       Text="60s AVG: 0"
                                       Foreground="White"
                                       FontSize="10"/>
                            <TextBlock x:Name="GraphPeakText" 
                                       Text="PEAK: 0"
                                       Foreground="#A0A0B0"
                                       FontSize="9"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Quantum Overlay Effect -->
        <Border Background="{StaticResource QuantumGradient}" 
                Opacity="0.03"
                IsHitTestVisible="False">
            <Border.Effect>
                <BlurEffect Radius="50"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>