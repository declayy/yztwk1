                            </TabItem>

                            <!-- Settings Tab -->
                            <TabItem Header="SETTINGS">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="5">
                                        <!-- General Settings -->
                                        <GroupBox Header="GENERAL SETTINGS" 
                                                  Style="{StaticResource QuantumGroupBoxStyle}"
                                                  Margin="0,0,0,15">
                                            <StackPanel>
                                                <Border Style="{StaticResource SettingItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Start with Windows"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource QuantumLightText}"/>
                                                            <TextBlock Text="Automatically start when Windows boots"
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource QuantumDimText}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>

                                                        <ToggleButton Grid.Column="1" 
                                                                      x:Name="ToggleStartWithWindows"
                                                                      Style="{StaticResource QuantumToggleStyle}"
                                                                      VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>

                                                <Border Style="{StaticResource SettingItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Minimize to System Tray"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource QuantumLightText}"/>
                                                            <TextBlock Text="Close button minimizes to tray instead of exiting"
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource QuantumDimText}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>

                                                        <ToggleButton Grid.Column="1" 
                                                                      x:Name="ToggleMinimizeToTray"
                                                                      Style="{StaticResource QuantumToggleStyle}"
                                                                      IsChecked="True"
                                                                      VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>

                                                <Border Style="{StaticResource SettingItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Auto-check for Updates"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource QuantumLightText}"/>
                                                            <TextBlock Text="Automatically check for new versions"
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource QuantumDimText}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>

                                                        <ToggleButton Grid.Column="1" 
                                                                      x:Name="ToggleAutoUpdate"
                                                                      Style="{StaticResource QuantumToggleStyle}"
                                                                      IsChecked="True"
                                                                      VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                        </GroupBox>

                                        <!-- Performance Settings -->
                                        <GroupBox Header="PERFORMANCE SETTINGS" 
                                                  Style="{StaticResource QuantumGroupBoxStyle}"
                                                  Margin="0,0,0,15">
                                            <StackPanel>
                                                <Border Style="{StaticResource SettingItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Enable Quantum Visualizer"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource QuantumLightText}"/>
                                                            <TextBlock Text="Show particle effects and visualizations (uses 1-2% CPU)"
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource QuantumDimText}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>

                                                        <ToggleButton Grid.Column="1" 
                                                                      x:Name="ToggleQuantumVisualizer"
                                                                      Style="{StaticResource QuantumToggleStyle}"
                                                                      IsChecked="True"
                                                                      Checked="ToggleQuantumVisualizer_Checked"
                                                                      Unchecked="ToggleQuantumVisualizer_Unchecked"
                                                                      VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>

                                                <Border Style="{StaticResource SettingItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="High Performance Monitoring"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource QuantumLightText}"/>
                                                            <TextBlock Text="More frequent system checks (increases CPU usage)"
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource QuantumDimText}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>

                                                        <ToggleButton Grid.Column="1" 
                                                                      x:Name="ToggleHighPerfMonitoring"
                                                                      Style="{StaticResource QuantumToggleStyle}"
                                                                      VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>

                                                <Border Style="{StaticResource SettingItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Sound Effects"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource QuantumLightText}"/>
                                                            <TextBlock Text="Play sounds for actions and notifications"
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource QuantumDimText}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>

                                                        <ToggleButton Grid.Column="1" 
                                                                      x:Name="ToggleSoundEffects"
                                                                      Style="{StaticResource QuantumToggleStyle}"
                                                                      IsChecked="True"
                                                                      VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                        </GroupBox>

                                        <!-- Security Settings -->
                                        <GroupBox Header="SECURITY SETTINGS" 
                                                  Style="{StaticResource QuantumGroupBoxStyle}"
                                                  Margin="0,0,0,15">
                                            <StackPanel>
                                                <Border Style="{StaticResource SettingItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Enable TPM Validation"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource QuantumLightText}"/>
                                                            <TextBlock Text="Require TPM 2.0/3.0 for certain optimizations"
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource QuantumDimText}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>

                                                        <ToggleButton Grid.Column="1" 
                                                                      x:Name="ToggleTpmValidation"
                                                                      Style="{StaticResource QuantumToggleStyle}"
                                                                      IsChecked="True"
                                                                      VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>

                                                <Border Style="{StaticResource SettingItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Create System Restore Points"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource QuantumLightText}"/>
                                                            <TextBlock Text="Automatically create restore points before changes"
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource QuantumDimText}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>

                                                        <ToggleButton Grid.Column="1" 
                                                                      x:Name="ToggleRestorePoints"
                                                                      Style="{StaticResource QuantumToggleStyle}"
                                                                      IsChecked="True"
                                                                      VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>

                                                <Border Style="{StaticResource SettingItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Enhanced Logging"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource QuantumLightText}"/>
                                                            <TextBlock Text="Log detailed information for debugging"
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource QuantumDimText}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>

                                                        <ToggleButton Grid.Column="1" 
                                                                      x:Name="ToggleEnhancedLogging"
                                                                      Style="{StaticResource QuantumToggleStyle}"
                                                                      VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                        </GroupBox>

                                        <!-- About Section -->
                                        <GroupBox Header="ABOUT" 
                                                  Style="{StaticResource QuantumGroupBoxStyle}">
                                            <StackPanel>
                                                <Border Style="{StaticResource SettingItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Image Grid.Column="0"
                                                               Source="../Resources/Icons/quantum_logo_large.png"
                                                               Width="64" Height="64"
                                                               Margin="0,0,15,0"/>

                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="FiveM Quantum Tweaker 2026"
                                                                       FontSize="16"
                                                                       FontWeight="Bold"
                                                                       Foreground="{StaticResource QuantumAccentPurple}"/>
                                                            <TextBlock Text="Version 2.0.0 (Build 2026.1)"
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource QuantumDimText}"
                                                                       Margin="0,2,0,0"/>
                                                            <TextBlock Text="Advanced Performance Optimization System"
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource QuantumLightText}"
                                                                       Margin="0,5,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>

                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Center"
                                                            Margin="0,15,0,0">
                                                    <Button x:Name="BtnCheckUpdates"
                                                            Content="Check for Updates"
                                                            Style="{StaticResource SmallButtonStyle}"
                                                            Click="BtnCheckUpdates_Click"
                                                            Margin="0,0,10,0"/>

                                                    <Button x:Name="BtnViewChangelog"
                                                            Content="View Changelog"
                                                            Style="{StaticResource SmallButtonStyle}"
                                                            Click="BtnViewChangelog_Click"
                                                            Margin="0,0,10,0"/>

                                                    <Button x:Name="BtnAbout"
                                                            Content="About"
                                                            Style="{StaticResource SmallButtonStyle}"
                                                            Click="BtnAbout_Click"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </GroupBox>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Border>
            </Grid>

            <!-- ===== BOTTOM BAR ===== -->
            <Border Grid.Row="3" 
                    Background="{StaticResource QuantumStatusBarBackground}"
                    Height="35"
                    CornerRadius="0,0,10,10"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{StaticResource QuantumDividerBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Quick Stats -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0">
                        <!-- Optimization Status -->
                        <TextBlock x:Name="TxtOptimizationStatus"
                                   Text="Optimizations: Inactive"
                                   Foreground="{StaticResource QuantumWarning}"
                                   FontSize="11"
                                   VerticalAlignment="Center"/>

                        <!-- Separator -->
                        <Rectangle Width="1" Height="12" 
                                   Fill="{StaticResource QuantumDividerBrush}"
                                   Margin="15,0"/>

                        <!-- Tweak Count -->
                        <TextBlock x:Name="TxtTweakCount"
                                   Text="Active Tweaks: 0"
                                   Foreground="{StaticResource QuantumDimText}"
                                   FontSize="11"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Center: Progress Bar -->
                    <Border Grid.Column="1" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="300">
                        <Grid>
                            <ProgressBar x:Name="ProgressGlobal"
                                        Minimum="0" Maximum="100" Value="0"
                                        Height="6"
                                        Style="{StaticResource QuantumProgressBarStyle}"/>

                            <TextBlock x:Name="TxtProgressStatus"
                                       Text="Ready"
                                       Foreground="{StaticResource QuantumLightText}"
                                       FontSize="10"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Right: Action Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,15,0">
                        <!-- Save Settings -->
                        <Button x:Name="BtnSaveSettings"
                                Content="Save Settings"
                                Style="{StaticResource SmallButtonStyle}"
                                Click="BtnSaveSettings_Click"
                                Margin="0,0,10,0"/>

                        <!-- Help Button -->
                        <Button x:Name="BtnHelp"
                                Style="{StaticResource SmallIconButtonStyle}"
                                Content="&#xE897;"
                                FontFamily="Segoe MDL2 Assets"
                                ToolTip="Help"
                                Click="BtnHelp_Click"
                                Margin="0,0,10,0"/>

                        <!-- Settings Button -->
                        <Button x:Name="BtnSettings"
                                Style="{StaticResource SmallIconButtonStyle}"
                                Content="&#xE713;"
                                FontFamily="Segoe MDL2 Assets"
                                ToolTip="Settings"
                                Click="BtnSettings_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ===== NOTIFICATION OVERLAY ===== -->
        <Border x:Name="NotificationOverlay"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20"
                CornerRadius="8"
                Background="{StaticResource QuantumCardBackground}"
                BorderBrush="{StaticResource QuantumAccentPurple}"
                BorderThickness="1"
                Visibility="Collapsed"
                Width="350">
            <StackPanel>
                <!-- Notification Header -->
                <Border Background="{StaticResource QuantumAccentPurple}"
                        CornerRadius="7,7,0,0"
                        Padding="12,8">
                    <StackPanel Orientation="Horizontal">
                        <Path x:Name="NotificationIcon"
                              Data="&#xE7BA;"
                              Fill="White"
                              Width="16" Height="16"
                              Margin="0,0,8,0"/>
                        <TextBlock x:Name="TxtNotificationTitle"
                                   Text="Notification"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Notification Content -->
                <StackPanel Margin="12">
                    <TextBlock x:Name="TxtNotificationMessage"
                               TextWrapping="Wrap"
                               Foreground="{StaticResource QuantumLightText}"
                               Margin="0,0,0,10"/>

                    <StackPanel x:Name="NotificationButtons"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button x:Name="BtnNotificationAction"
                                Content="OK"
                                Style="{StaticResource SmallButtonStyle}"
                                Click="BtnNotificationAction_Click"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ===== QUANTUM PROGRESS OVERLAY ===== -->
        <Border x:Name="QuantumProgressOverlay"
                Background="#80000000"
                Visibility="Collapsed"
                Panel.ZIndex="999">
            <Grid>
                <Border Background="{StaticResource QuantumCardBackground}"
                        CornerRadius="15"
                        Width="500"
                        Height="200"
                        BorderBrush="{StaticResource QuantumAccentPurple}"
                        BorderThickness="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0"
                                Background="{StaticResource QuantumAccentPurple}"
                                CornerRadius="13,13,0,0"
                                Padding="20,12">
                            <TextBlock x:Name="TxtProgressOverlayTitle"
                                       Text="Quantum Optimization"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       FontSize="16"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Content -->
                        <StackPanel Grid.Row="1" 
                                    Margin="20"
                                    VerticalAlignment="Center">
                            <TextBlock x:Name="TxtProgressOverlayMessage"
                                       Text="Applying optimizations..."
                                       Foreground="{StaticResource QuantumLightText}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"/>

                            <ProgressBar x:Name="ProgressOverlay"
                                        Minimum="0" Maximum="100" 
                                        Height="20"
                                        Style="{StaticResource QuantumProgressBarStyle}"/>

                            <TextBlock x:Name="TxtProgressOverlaySubMessage"
                                       Text="Please wait..."
                                       Foreground="{StaticResource QuantumDimText}"
                                       FontSize="11"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                        </StackPanel>

                        <!-- Cancel Button -->
                        <Border Grid.Row="2"
                                BorderThickness="0,1,0,0"
                                BorderBrush="{StaticResource QuantumDividerBrush}"
                                Padding="20,10">
                            <Button x:Name="BtnCancelProgress"
                                    Content="Cancel"
                                    Style="{StaticResource SmallButtonStyle}"
                                    HorizontalAlignment="Center"
                                    Click="BtnCancelProgress_Click"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>