<Window x:Class="FiveMQuantumTweaker2026.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FiveMQuantumTweaker2026.UI"
        xmlns:ui="clr-namespace:FiveMQuantumTweaker2026.UI.Controls"
        xmlns:utils="clr-namespace:FiveMQuantumTweaker2026.Utils"
        xmlns:converters="clr-namespace:FiveMQuantumTweaker2026.Converters"
        xmlns:models="clr-namespace:FiveMQuantumTweaker2026.Models"
        mc:Ignorable="d"
        Title="FiveM Quantum Tweaker 2026" 
        Height="850" 
        Width="1400"
        MinHeight="700"
        MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        BorderThickness="1"
        BorderBrush="{StaticResource QuantumBorderBrush}"
        ResizeMode="CanResizeWithGrip"
        Icon="../Resources/Icons/app_icon.ico"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Window Chrome Style -->
        <Style TargetType="Window">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        </Style>

        <!-- Converter -->
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBooleanConverter x:Key="InverseBool"/>
        <converters:PercentageConverter x:Key="PercentageConverter"/>
        <converters:ByteSizeConverter x:Key="ByteSizeConverter"/>
        <converters:LatencyColorConverter x:Key="LatencyColorConverter"/>
        <converters:FpsColorConverter x:Key="FpsColorConverter"/>
        <converters:CpuTemperatureConverter x:Key="CpuTempConverter"/>
        <converters:BooleanToGlyphConverter x:Key="BoolToGlyph"/>

        <!-- Animationen -->
        <Storyboard x:Key="ButtonHoverAnimation" Duration="0:0:0.2">
            <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                          To="{StaticResource QuantumHoverColor}" 
                          Duration="0:0:0.2"/>
        </Storyboard>

        <Storyboard x:Key="ButtonPressAnimation" Duration="0:0:0.1">
            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
        </Storyboard>

        <Storyboard x:Key="QuantumPulseAnimation" RepeatBehavior="Forever" Duration="0:0:2">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                           From="0.3" To="1" 
                           AutoReverse="True"/>
        </Storyboard>

        <!-- ToolTip Style -->
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="{StaticResource QuantumDarkBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource QuantumLightText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource QuantumAccentPurple}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="HasDropShadow" Value="True"/>
        </Style>

        <!-- DataTemplate für Performance Cards -->
        <DataTemplate x:Key="PerformanceCardTemplate" DataType="models:PerformanceMetric">
            <Border Background="{StaticResource QuantumCardBackground}"
                    CornerRadius="10"
                    Margin="5"
                    Padding="12"
                    BorderThickness="1"
                    BorderBrush="{StaticResource QuantumCardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Path Data="{Binding IconPath}" 
                              Fill="{Binding IconColor}" 
                              Width="20" Height="20" 
                              Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Title}" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"
                                   Foreground="{StaticResource QuantumLightText}"/>
                    </StackPanel>

                    <!-- Value -->
                    <TextBlock Grid.Row="1" 
                               Text="{Binding Value, StringFormat={}{0:N1}}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{Binding ValueColor}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,10"/>

                    <!-- Footer -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <TextBlock Text="{Binding Unit}" 
                                   FontSize="11"
                                   Foreground="{StaticResource QuantumDimText}"
                                   VerticalAlignment="Bottom"/>
                        <TextBlock Text="{Binding TrendSymbol}" 
                                   FontSize="14"
                                   Foreground="{Binding TrendColor}"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Bottom"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- DataTemplate für Tweak Profile -->
        <DataTemplate x:Key="ProfileTemplate" DataType="models:OptimizationProfile">
            <Border Background="{StaticResource QuantumCardBackground}"
                    CornerRadius="8"
                    Margin="4"
                    Padding="12"
                    BorderThickness="1"
                    BorderBrush="{Binding IsActive, Converter={StaticResource BoolToGlyph}, ConverterParameter='Border'}"
                    Cursor="Hand"
                    MouseEnter="ProfileCard_MouseEnter"
                    MouseLeave="ProfileCard_MouseLeave"
                    MouseLeftButtonUp="ProfileCard_MouseLeftButtonUp">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Border Grid.Column="0" 
                            Width="40" 
                            Height="40"
                            CornerRadius="20"
                            Background="{Binding ProfileType, Converter={StaticResource ProfileTypeToBrush}}"
                            Margin="0,0,12,0">
                        <TextBlock Text="{Binding ProfileType, Converter={StaticResource ProfileTypeToIcon}}"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="18"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ProfileName}"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="{StaticResource QuantumLightText}"/>
                        <TextBlock Text="{Binding Description}"
                                   FontSize="11"
                                   Foreground="{StaticResource QuantumDimText}"
                                   TextWrapping="Wrap"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="{Binding LastUsed, StringFormat='Zuletzt: {0:dd.MM.yy HH:mm}'}"
                                   FontSize="10"
                                   Foreground="{StaticResource QuantumDimText}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Active Indicator -->
                    <Border Grid.Column="2" 
                            Width="12" 
                            Height="12"
                            CornerRadius="6"
                            Background="{StaticResource QuantumAccentGreen}"
                            Visibility="{Binding IsActive, Converter={StaticResource BoolToVis}}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" 
                                            Color="{StaticResource QuantumAccentGreen}"
                                            ShadowDepth="0"/>
                        </Border.Effect>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <!-- Haupt Grid -->
    <Grid>
        <!-- Hintergrund mit Rauch-Effekt -->
        <Grid.Background>
            <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="1" RadiusY="1">
                <GradientStop Color="#0A0A14" Offset="0"/>
                <GradientStop Color="#06060E" Offset="0.5"/>
                <GradientStop Color="#020208" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <!-- Quantum Visualizer Overlay -->
        <local:QuantumVisualizer x:Name="QuantumViz"
                                IsEnabled="True"
                                ParticleCount="500"
                                Opacity="0.4"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"/>

        <!-- Main Container -->
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title Bar -->
                <RowDefinition Height="Auto"/>
                <!-- Status Bar -->
                <RowDefinition Height="*"/>
                <!-- Main Content -->
                <RowDefinition Height="Auto"/>
                <!-- Bottom Bar -->
            </Grid.RowDefinitions>

            <!-- ===== TITLE BAR ===== -->
            <Border Grid.Row="0" 
                    Background="{StaticResource QuantumTitleBarBackground}"
                    CornerRadius="10,10,0,0"
                    Height="50"
                    BorderThickness="0,0,0,1"
                    BorderBrush="{StaticResource QuantumDividerBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo und Titel -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0">
                        <Image Source="../Resources/Icons/quantum_logo.png" 
                               Width="28" Height="28"
                               Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="FIVEM QUANTUM TWEAKER 2026"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource QuantumAccentPurple}"/>
                            <TextBlock Text="Advanced Performance Optimization System"
                                       FontSize="10"
                                       Foreground="{StaticResource QuantumDimText}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                        <!-- Minimize Button -->
                        <Button x:Name="BtnMinimize"
                                Style="{StaticResource WindowControlButtonStyle}"
                                Content="&#xE921;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="14"
                                ToolTip="Minimieren"
                                Click="BtnMinimize_Click"/>

                        <!-- Maximize/Restore Button -->
                        <Button x:Name="BtnMaximize"
                                Style="{StaticResource WindowControlButtonStyle}"
                                Content="&#xE922;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="14"
                                ToolTip="Maximieren"
                                Click="BtnMaximize_Click"/>

                        <!-- Close Button -->
                        <Button x:Name="BtnClose"
                                Style="{StaticResource WindowControlButtonStyle}"
                                Content="&#xE8BB;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="14"
                                ToolTip="Schließen"
                                Click="BtnClose_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===== STATUS BAR ===== -->
            <Border Grid.Row="1" 
                    Background="{StaticResource QuantumStatusBarBackground}"
                    Height="40"
                    BorderThickness="0,0,0,1"
                    BorderBrush="{StaticResource QuantumDividerBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Status -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0">
                        <!-- Security Status -->
                        <Border x:Name="SecurityStatusIndicator"
                                Width="10" Height="10"
                                CornerRadius="5"
                                Background="{StaticResource QuantumAccentGreen}"
                                Margin="0,0,8,0"
                                ToolTip="Security: Active">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" 
                                                Color="{StaticResource QuantumAccentGreen}"
                                                ShadowDepth="0"/>
                            </Border.Effect>
                        </Border>

                        <!-- Quantum Status -->
                        <Border x:Name="QuantumStatusIndicator"
                                Width="10" Height="10"
                                CornerRadius="5"
                                Background="{StaticResource QuantumAccentBlue}"
                                Margin="0,0,8,0"
                                ToolTip="Quantum Engine: Ready">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" 
                                                Color="{StaticResource QuantumAccentBlue}"
                                                ShadowDepth="0"/>
                            </Border.Effect>
                        </Border>

                        <!-- Gaming Mode -->
                        <Border x:Name="GamingModeIndicator"
                                Width="10" Height="10"
                                CornerRadius="5"
                                Background="{StaticResource QuantumWarning}"
                                Margin="0,0,8,0"
                                ToolTip="Gaming Mode: Inactive"
                                Visibility="Collapsed"/>

                        <!-- Connection Status -->
                        <TextBlock x:Name="TxtConnectionStatus"
                                   Text="● Connected"
                                   Foreground="{StaticResource QuantumAccentGreen}"
                                   FontSize="11"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Center Status -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Current Profile -->
                        <TextBlock x:Name="TxtCurrentProfile"
                                   Text="Profile: Quantum Default"
                                   Foreground="{StaticResource QuantumLightText}"
                                   FontSize="11"
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0"/>

                        <!-- Uptime -->
                        <TextBlock x:Name="TxtUptime"
                                   Text="Uptime: 00:00:00"
                                   Foreground="{StaticResource QuantumDimText}"
                                   FontSize="11"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Right Status -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,15,0">
                        <!-- FPS Counter -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <TextBlock Text="FPS:"
                                       Foreground="{StaticResource QuantumDimText}"
                                       FontSize="11"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtFps"
                                       Text="--"
                                       Foreground="{Binding Text, ElementName=TxtFps, Converter={StaticResource FpsColorConverter}}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="3,0,0,0"/>
                        </StackPanel>

                        <!-- Ping Counter -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <TextBlock Text="Ping:"
                                       Foreground="{StaticResource QuantumDimText}"
                                       FontSize="11"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtPing"
                                       Text="--"
                                       Foreground="{Binding Text, ElementName=TxtPing, Converter={StaticResource LatencyColorConverter}}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="3,0,0,0"/>
                        </StackPanel>

                        <!-- System Time -->
                        <TextBlock x:Name="TxtSystemTime"
                                   Text="00:00:00"
                                   Foreground="{StaticResource QuantumLightText}"
                                   FontSize="11"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===== MAIN CONTENT ===== -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <!-- Sidebar -->
                    <ColumnDefinition Width="*"/>
                    <!-- Content Area -->
                </Grid.ColumnDefinitions>

                <!-- ===== SIDEBAR ===== -->
                <Border Grid.Column="0" 
                        Background="{StaticResource QuantumSidebarBackground}"
                        BorderThickness="0,0,1,0"
                        BorderBrush="{StaticResource QuantumDividerBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Quick Actions -->
                            <RowDefinition Height="*"/>
                            <!-- Profiles -->
                            <RowDefinition Height="Auto"/>
                            <!-- System Info -->
                        </Grid.RowDefinitions>

                        <!-- Quick Actions -->
                        <StackPanel Grid.Row="0" Margin="15,15,15,10">
                            <TextBlock Text="QUICK ACTIONS"
                                       Foreground="{StaticResource QuantumDimText}"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Margin="0,0,0,8"/>

                            <!-- Quantum Optimize Button -->
                            <Button x:Name="BtnQuantumOptimize"
                                    Style="{StaticResource QuantumActionButtonStyle}"
                                    Content="⚡ QUANTUM OPTIMIZE"
                                    Tag="Performance"
                                    Click="BtnQuantumOptimize_Click"
                                    MouseEnter="QuantumButton_MouseEnter"
                                    MouseLeave="QuantumButton_MouseLeave">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock Text="Quantum Performance Optimization" 
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="Apply advanced 2026 optimizations for maximum FPS" 
                                                       Margin="0,5,0,0"/>
                                            <TextBlock Text="• Neural CPU Scheduling" 
                                                       Foreground="{StaticResource QuantumAccentBlue}"/>
                                            <TextBlock Text="• Holographic Memory Management" 
                                                       Foreground="{StaticResource QuantumAccentBlue}"/>
                                            <TextBlock Text="• Temporal GPU Optimization" 
                                                       Foreground="{StaticResource QuantumAccentBlue}"/>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>

                            <!-- Network & HitReg Button -->
                            <Button x:Name="BtnNetworkHitReg"
                                    Style="{StaticResource QuantumActionButtonStyle}"
                                    Content="🌐 NETWORK + HITREG"
                                    Tag="Network"
                                    Click="BtnNetworkHitReg_Click"
                                    MouseEnter="QuantumButton_MouseEnter"
                                    Margin="0,8,0,0">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock Text="Quantum Network &amp; HitReg 2.0" 
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="Advanced networking with temporal hit registration" 
                                                       Margin="0,5,0,0"/>
                                            <TextBlock Text="• Entanglement Packet Prediction" 
                                                       Foreground="{StaticResource QuantumAccentPurple}"/>
                                            <TextBlock Text="• Chronal Displacement (+12ms)" 
                                                       Foreground="{StaticResource QuantumAccentPurple}"/>
                                            <TextBlock Text="• Neural Sync Optimization" 
                                                       Foreground="{StaticResource QuantumAccentPurple}"/>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>

                            <!-- System Cleaner Button -->
                            <Button x:Name="BtnSystemCleaner"
                                    Style="{StaticResource QuantumActionButtonStyle}"
                                    Content="🧹 QUANTUM CLEANER"
                                    Tag="Cleaner"
                                    Click="BtnSystemCleaner_Click"
                                    MouseEnter="QuantumButton_MouseEnter"
                                    Margin="0,8,0,0">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock Text="AI-Powered System Cleaning" 
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="Intelligent cleaning with neural garbage detection" 
                                                       Margin="0,5,0,0"/>
                                            <TextBlock Text="• Neural File Analysis" 
                                                       Foreground="{StaticResource QuantumAccentGreen}"/>
                                            <TextBlock Text="• Temporal Cache Management" 
                                                       Foreground="{StaticResource QuantumAccentGreen}"/>
                                            <TextBlock Text="• SSD Quantum Defrag" 
                                                       Foreground="{StaticResource QuantumAccentGreen}"/>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>

                            <!-- Revert All Button -->
                            <Button x:Name="BtnRevertAll"
                                    Style="{StaticResource QuantumActionButtonStyle}"
                                    Content="↩️ REVERT ALL"
                                    Tag="Revert"
                                    Click="BtnRevertAll_Click"
                                    MouseEnter="QuantumButton_MouseEnter"
                                    Margin="0,8,0,0">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock Text="100% Safe Rollback" 
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="Restore all changes to original state" 
                                                       Margin="0,5,0,0"/>
                                            <TextBlock Text="• Registry Rollback" 
                                                       Foreground="{StaticResource QuantumWarning}"/>
                                            <TextBlock Text="• Service Restoration" 
                                                       Foreground="{StaticResource QuantumWarning}"/>
                                            <TextBlock Text="• System Integrity Check" 
                                                       Foreground="{StaticResource QuantumWarning}"/>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>

                            <!-- Run FiveM Optimized Button -->
                            <Button x:Name="BtnRunFiveMOptimized"
                                    Style="{StaticResource QuantumActionButtonStyle}"
                                    Content="🚀 RUN FIVEM OPTIMIZED"
                                    Tag="FiveM"
                                    Click="BtnRunFiveMOptimized_Click"
                                    MouseEnter="QuantumButton_MouseEnter"
                                    Margin="0,8,0,0">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock Text="FiveM Quantum Launch" 
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="Launch FiveM with all optimizations active" 
                                                       Margin="0,5,0,0"/>
                                            <TextBlock Text="• Priority CPU/GPU Allocation" 
                                                       Foreground="{StaticResource QuantumAccentCyan}"/>
                                            <TextBlock Text="• Real-time Process Optimization" 
                                                       Foreground="{StaticResource QuantumAccentCyan}"/>
                                            <TextBlock Text="• Network Traffic Prioritization" 
                                                       Foreground="{StaticResource QuantumAccentCyan}"/>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                        </StackPanel>

                        <!-- Profiles Section -->
                        <Border Grid.Row="1" 
                                Margin="15,0,15,15"
                                BorderThickness="0,1,0,0"
                                BorderBrush="{StaticResource QuantumDividerBrush}"
                                Padding="0,15,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="OPTIMIZATION PROFILES"
                                               Foreground="{StaticResource QuantumDimText}"
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Margin="0,0,0,8"/>

                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="BtnNewProfile"
                                                Style="{StaticResource SmallIconButtonStyle}"
                                                Content="&#xE710;"
                                                FontFamily="Segoe MDL2 Assets"
                                                ToolTip="New Profile"
                                                Click="BtnNewProfile_Click"/>

                                        <Button x:Name="BtnLoadProfile"
                                                Style="{StaticResource SmallIconButtonStyle}"
                                                Content="&#xE8E5;"
                                                FontFamily="Segoe MDL2 Assets"
                                                ToolTip="Load Profile"
                                                Click="BtnLoadProfile_Click"
                                                Margin="5,0,0,0"/>

                                        <Button x:Name="BtnSaveProfile"
                                                Style="{StaticResource SmallIconButtonStyle}"
                                                Content="&#xE74E;"
                                                FontFamily="Segoe MDL2 Assets"
                                                ToolTip="Save Profile"
                                                Click="BtnSaveProfile_Click"
                                                Margin="5,0,0,0"/>

                                        <Button x:Name="BtnManageProfiles"
                                                Style="{StaticResource SmallIconButtonStyle}"
                                                Content="&#xE712;"
                                                FontFamily="Segoe MDL2 Assets"
                                                ToolTip="Manage Profiles"
                                                Click="BtnManageProfiles_Click"
                                                Margin="5,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Profiles List -->
                                <ScrollViewer Grid.Row="1" 
                                              Margin="0,15,0,0"
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled">
                                    <ItemsControl x:Name="ProfilesList"
                                                  ItemsSource="{Binding Profiles}"
                                                  ItemTemplate="{StaticResource ProfileTemplate}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- System Info -->
                        <Border Grid.Row="2" 
                                Background="{StaticResource QuantumCardBackground}"
                                CornerRadius="8"
                                Margin="15"
                                Padding="12">
                            <StackPanel>
                                <TextBlock Text="SYSTEM INFO"
                                           Foreground="{StaticResource QuantumDimText}"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           Margin="0,0,0,8"/>

                                <!-- CPU -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <TextBlock Text="CPU:"
                                               Foreground="{StaticResource QuantumDimText}"
                                               FontSize="11"
                                               Width="40"/>
                                    <TextBlock x:Name="TxtCpuInfo"
                                               Text="--"
                                               Foreground="{StaticResource QuantumLightText}"
                                               FontSize="11"/>
                                </StackPanel>

                                <!-- GPU -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <TextBlock Text="GPU:"
                                               Foreground="{StaticResource QuantumDimText}"
                                               FontSize="11"
                                               Width="40"/>
                                    <TextBlock x:Name="TxtGpuInfo"
                                               Text="--"
                                               Foreground="{StaticResource QuantumLightText}"
                                               FontSize="11"/>
                                </StackPanel>

                                <!-- RAM -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <TextBlock Text="RAM:"
                                               Foreground="{StaticResource QuantumDimText}"
                                               FontSize="11"
                                               Width="40"/>
                                    <TextBlock x:Name="TxtRamInfo"
                                               Text="--"
                                               Foreground="{StaticResource QuantumLightText}"
                                               FontSize="11"/>
                                </StackPanel>

                                <!-- Windows -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="OS:"
                                               Foreground="{StaticResource QuantumDimText}"
                                               FontSize="11"
                                               Width="40"/>
                                    <TextBlock x:Name="TxtOsInfo"
                                               Text="--"
                                               Foreground="{StaticResource QuantumLightText}"
                                               FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- ===== CONTENT AREA ===== -->
                <Border Grid.Column="1" 
                        Background="{StaticResource QuantumContentBackground}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Performance Dashboard -->
                            <RowDefinition Height="*"/>
                            <!-- Details Area -->
                        </Grid.RowDefinitions>

                        <!-- Performance Dashboard -->
                        <Border Grid.Row="0"
                                Background="{StaticResource QuantumDashboardBackground}"
                                CornerRadius="0,0,10,10"
                                Padding="20,15"
                                BorderThickness="0,0,0,1"
                                BorderBrush="{StaticResource QuantumDividerBrush}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
